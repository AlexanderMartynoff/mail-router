<odoo>
    <record id="view_email_server_form" model="ir.ui.view">
        <field name="name">fetchmail.server.form</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_email_server_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='object_id']" position="after">
                  <field name="mail_router_route_number" invisible="1"/>
                  <field name="mail_router_route_ids"
                         attrs="{'invisible': [('mail_router_route_number', '==', 0)]}"
                         widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>


