<odoo>
    <data>

        <record id="mail_router_route_form" model="ir.ui.view">
            <field name="name">mail_router.route.form</field>
            <field name="model">mail_router.route</field>
            <field name="arch" type="xml">
                <form string="Mail parser">
                    <sheet>
                        <group>
                            <group>
                                <field name="model_id" />
                            </group>

                            <group>
                                <field name="active" />
                            </group>

                            <group>
                                <field name="fetchmail_server_ids" widget="many2many_tags"/>
                            </group>
                            
                            <group>
                                <field name="cleanup_html"/>
                            </group>

                        </group>

                        <group>
                            <field name="field_condition_ids" widget="one2many_list">
                                <tree editable="bottom" string="Field condition">
                                    <field name="field" />
                                    <field name="mode" />
                                    <field name="expression" />
                                </tree>
                            </field>
                        </group>

                        <group>
                            <field name="field_parser_ids" widget="one2many_list">
                                <tree editable="bottom" string="Field parsers">
                                    <field name="field" />
                                    <field name="expression" />
                                    <field name="extraction" />
                                    <field name="variable" />
                                </tree>
                            </field>
                        </group>

                        <group>
                            <field name="field_mapper_ids" widget="one2many_list">
                                <tree string="Field mappers">
                                    <field name="field" />
                                    <field name="mode" />
                                </tree>
                            </field>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mail_router_route_tree" model="ir.ui.view">
            <field name="name">mail_router.route.tree</field>
            <field name="model">mail_router.route</field>
            <field name="arch" type="xml">
                <tree string="Routes">
                    <field name="model_id" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <record id="mail_router_snippet_form" model="ir.ui.view">
            <field name="name">mail_router.snippet.form</field>
            <field name="model">mail_router.snippet</field>
            <field name="arch" type="xml">
                <form string="Snippet">
                    <sheet>
                        <group col="2">
                            <field name="name" />
                            <field name="code" widget="ace" options="{'mode': 'python'}"/>
                        </group>

                        <div groups="base.group_no_one">
                            <h3>How to define a computed field</h3>
                            <p>Computed fields are defined with the fields
                            <strong>Dependencies</strong> and <strong>Compute</strong>.</p>
                            <p>The field <strong>Dependencies</strong> lists the fields that
                            the current field depends on. It is a comma-separated list of
                            field names, like <code>name, size</code>. You can also refer to
                            fields accessible through other relational fields, for instance
                            <code>partner_id.company_id.name</code>.</p>
                            <p>The field <strong>Compute</strong> is the Python code to
                            compute the value of the field on a set of records. The value of
                            the field must be assigned to each record with a dictionary-like
                            assignment.</p>
                            <p>The only predefined variables are</p>
                            <ul>
                                <li><code>self</code> (the set of records to compute)</li>
                                <li><code>datetime</code> (Python module)</li>
                                <li><code>dateutil</code> (Python module)</li>
                                <li><code>time</code> (Python module)</li>
                            </ul>
                            <p>Other features are accessible through <code>self</code>, like
                            <code>self.env</code>, etc.</p>
                        </div>


                    </sheet>
                </form>
            </field>
        </record>

        <record id="mail_router_snippet_tree" model="ir.ui.view">
            <field name="name">mail_router.snippet.tree</field>
            <field name="model">mail_router.snippet</field>
            <field name="arch" type="xml">
                <tree string="Snippets">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="mail_router_field_mapper_form" model="ir.ui.view">
            <field name="name">mail_router.field_mapper.form</field>
            <field name="model">mail_router.field_mapper</field>
            <field name="arch" type="xml">
                <form string="Snippet">
                    <sheet>
                        <group col="4">
                            <field name="field"/>
                            <field name="mode"/>      
                        </group>

                        <group col="2">
                            <field name="variable"/>
                            <field name="template"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_mail_router_route" model="ir.actions.act_window">
            <field name="name">Route</field>
            <field name="res_model">mail_router.route</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_mail_router_snippet" model="ir.actions.act_window">
            <field name="name">Snippet</field>
            <field name="res_model">mail_router.snippet</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem parent="base.menu_custom"
                  id="menu_mail_routing"
                  name="Routing"
                  sequence="20"
                  groups="base.group_no_one" />
        
        <menuitem parent="mail_router.menu_mail_routing"
                  id="menu_mail_routing_route"
                  action="action_mail_router_route"
                  name="Route"
                  sequence="20"
                  groups="base.group_no_one" />

        <menuitem parent="mail_router.menu_mail_routing"
                  id="menu_mail_routing_snippet"
                  action="action_mail_router_snippet"
                  name="Snippet"
                  sequence="20"
                  groups="base.group_no_one" />
    </data>
</odoo>
